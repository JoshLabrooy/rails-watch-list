<!-- lists/show.html.erb -->
<h1><%= @list.name %></h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Comment</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @list.bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.movie.title %></td>
        <td><%= bookmark.comment %></td>
        <td>
         <%= link_to "delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure "}, class: 'btn' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add Bookmark', new_list_bookmark_path(@list), class: 'btn btn-primary' %>
